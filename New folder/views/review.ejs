<%-include('./partials/header') %>
<section>
    <div class="review">
        <div class="poster">
            <div class="movieImage">
                <% if(movie_detail.coverImage.length === 0){ %>
                    <img src="<%= movie_detail.moviePoster %>" alt="">
                <%} else { %>
                    <img src="<%= movie_detail.coverImage[1] %>" alt="">
                <% } %>
                <div class="movieDetail">
                    <h1><%=movie_detail.title %></h1>
                    <strong><p>Duration : <%= movie_detail.movieDuration%></p></strong>
                </div>
            </div>
        </div>
        <div class="movieStoryLine">
            <h2>Story Line</h2>
            <div class="movieStoryLine">
                <p><%=movie_detail.storyLine%></p>
            </div>
        </div>
        <div class="movieAboutDetails">
            <h2>About Movie</h2>
            <div class="movieDetails">
                <p>Directors : <%=movie_detail.director%></p>
                <p>Writers : <%=movie_detail.writer%></p>
                <p>Cast : <%=movie_detail.cast%></p>
            </div>
        </div>
        <div class="movieSnapShots">
            <h2>Snapshots</h2>
            <div class="snapShots">
                <% for(var i=0;i<movie_detail.coverImage.length;i++){ %>
                <img src="<%= movie_detail.coverImage[i]%>" alt="">
                <% } %>
            </div>
        </div>
        <div class="downloadButton">
            <button>Download 720p</button>
        </div>
    </div>
</section>
<%- include('./partials/footer') %>  